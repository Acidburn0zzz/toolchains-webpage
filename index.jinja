<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <title>Toolchains</title>

        <link rel="stylesheet" href="http://bootswatch.com/slate/bootstrap.min.css" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    </head>
    <body>
        <header>
            <h4>
                Toolchains
                <small>Last update: {{ datetime.now() }}</small> //
                <small>Time to generate: {{ datetime.now() - start_time }}</small>
            </h4>
        </header>
        <ul class="nav nav-tabs">
        {% for version in toolchains_by_arch.keys() %}
            <li {% if loop.first %}class="active"{% endif %}><a data-toggle="tab" href="#{{ version|slugify }}">{{ version }}</a></li>
        {% endfor %}
        </ul>
        <div class="tab-content">
        {% for version in toolchains_by_arch.keys() %}
            <div id="{{ version|slugify }}" class="tab-pane fade {% if loop.first %}in active{% endif %}">
                <h2>{{ version }}</h2>
                <div>
                    <span><strong>Select arch</strong></span>
                    <select class="select_arch">
                        <option value="" selected>---</option>
                        {% for arch in toolchains_by_arch[version].keys() %}
                        <option value="arch_{{ arch }}">{{ arch }}</option>
                        {% endfor %}
                    </select>
                </div>
                {% for toolchain in toolchains[version].values() %}
                    <div class="hidden toolchain arch_{{ toolchain['arch']}}">
                        {{ toolchain['name'] }}
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
        </div>
        <section>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                    </tr>
                </thead>
                <tbody>
                    <tr>

                    </tr>
                </tbody>
            </table>
        </section>
        <script charset="utf-8">
$(document).ready(function() {
    $('table').DataTable( {
        "scrollY":        "80vh",
        "scrollCollapse": true,
        "paging":         false
    } );
    $('.select_arch').click(function() {
            console.log(this.value);
        })
} );
        </script>
    </body>
</html>
